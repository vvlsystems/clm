{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"autoPauseDelay": {
			"defaultValue": -1,
			"type": "int",
			"allowedValues": [
				-1,
				60,
				120,
				240
			],
			"metadata": {
				"description": "Time in minutes after which database is automatically paused. A value of -1 means that automatic pause is disabled"
			}
		},
		"databaseCollation": {
			"defaultValue": "SQL_Latin1_General_CP1_CI_AS",
			"type": "String",
			"allowedValues": [
				"SQL_Latin1_General_CP1_CI_AS"
			],
			"metadata": {
				"description": "Collation type for Database"
			}
		},
		"databaseName": {
			"defaultValue": "",
			"type": "String",
			"metadata": {
				"description": "Name of the first database to be created."
			}
		},
		"databaseEdition": {
			"defaultValue": "GeneralPurpose",
			"allowedValues": [
				"GeneralPurpose"
			],
			"type": "String",
			"metadata": {
				"description": "Database Edition"
			}
		},
		"location": {
			"type": "string",
			"defaultValue": "[resourceGroup().location]",
			"metadata": {
				"description": "Location for all resources."
			}
		},
		"licenseType": {
			"type": "string",
			"defaultValue": "LicenseIncluded",
			"allowedValues": [
				"BasePrice",
				"LicenseIncluded"
			],
			"metadata": {
				"description": "Enter license type."
			}
		},
		"retentionDays": {
			"type": "int",
			"defaultValue": 7,
			"allowedValues": [
				7,
				14
			],
			"metadata": {
				"description": "The backup retention period in days. This is how many days Point-in-Time Restore will be supported."
			}
		},
		"sqlAdministratorLogin": {
			"type": "string",
			"metadata": {
				"description": "The administrator username of the SQL Server."
			}
		},
		"sqlAdministratorLoginPassword": {
			"type": "securestring",
			"metadata": {
				"description": "The administrator password of the SQL Server."
			}
		},
		"sqlServerName": {
			"defaultValue": "",
			"type": "String",
			"metadata": {
				"description": "Name of the Azure SQL Managed Instance - must be globally unique, contain only lowercase letters, numbers and '-'"
			}
		},
		"skuName": {
			"type": "string",
			"allowedValues": [
				"GP_Gen5_2",
				"GP_Gen5_4",
				"GP_Gen5_6",
				"GP_Gen5_8",
				"GP_Gen5_10",
				"GP_Gen5_12",
				"GP_Gen5_14"
			],
			"defaultValue": "GP_Gen5_2",
			"metadata": {
				"description": "Enter General Purpose size"
			}
		},
		"computeModel": {
			"type": "string",
			"allowedValues": [
				"Provisioned",
				"Serverless"
			],
			"defaultValue": "Provisioned",
			"metadata": {
				"description": "Enter the Compute Model for your database server"
			}
		},
		"storageSizeInGB": {
			"type": "int",
			"defaultValue": 32,
			"minValue": 32,
			"maxValue": 8192,
			"metadata": {
				"description": "Enter storage size."
			}
		},
		"transparentDataEncryption": {
			"type": "string",
			"allowedValues": [
				"Enabled",
				"Disabled"
			],
			"defaultValue": "Enabled",
			"metadata": {
				"description": "Enable or disable Transparent Data Encryption (TDE) for the database."
			}
		}
	},
	"resources": [{
		"name": "[parameters('sqlServerName')]",
		"type": "Microsoft.Sql/servers",
		"apiVersion": "2014-04-01-preview",
		"location": "[parameters('location')]",
		"tags": {
			"displayName": "SqlServer"
		},
		"properties": {
			"administratorLogin": "[parameters('sqlAdministratorLogin')]",
			"administratorLoginPassword": "[parameters('sqlAdministratorLoginPassword')]",
			"version": "12.0"
		},
		"resources": [{
				"name": "[parameters('databaseName')]",
				"type": "databases",
				"apiVersion": "2017-10-01-preview",
				"location": "[parameters('location')]",
				"tags": {
					"displayName": "Database"
				},
				"sku": {
					"name": "[parameters('skuName')]",
					"tier": "[parameters('databaseEdition')]"
				},
				"properties": {
					"edition": "[parameters('databaseEdition')]",
					"collation": "[parameters('databaseCollation')]",
					"storageSizeInGB": "[parameters('storageSizeInGB')]",
					"licenseType": "[parameters('licenseType')]",
					"autoPauseDelay": "[parameters('autoPauseDelay')]",
					"computeModel": "[parameters('computeModel')]"
				},
				"dependsOn": [
					"[parameters('sqlServerName')]"
				],
				"resources": [
					{
						"name": "current",
						"comments": "Transparent Data Encryption",
						"type": "transparentDataEncryption",
						"apiVersion": "2014-04-01-preview",
						"properties": {
							"status": "[parameters('transparentDataEncryption')]"
						},
						"dependsOn": [
							"[parameters('databaseName')]"
						]
					},
					{
						"name": "default",
						"comments": "Backup Retention Policy",
						"type": "backupShortTermRetentionPolicies",
						"apiVersion": "2017-10-01-preview",
						"properties": {
							"retentionDays": "[parameters('retentionDays')]"
						},
						"dependsOn": [
							"[parameters('databaseName')]",
							"current"
						]
					}				
				]
			},
			{
				"name": "AllowAllMicrosoftAzureIps",
				"type": "firewallrules",
				"apiVersion": "2014-04-01",
				"location": "[parameters('location')]",
				"properties": {
					"endIpAddress": "0.0.0.0",
					"startIpAddress": "0.0.0.0"
				},
				"dependsOn": [
					"[parameters('sqlServerName')]"
				]
			}
		]
	}],
	"outputs": {
		"sqlServerFqdn": {
			"type": "string",
			"value": "[reference(concat('Microsoft.Sql/servers/', parameters('sqlServerName'))).fullyQualifiedDomainName]"
		},
		"databaseName": {
			"type": "string",
			"value": "[parameters('databaseName')]"
		}
	}
}
